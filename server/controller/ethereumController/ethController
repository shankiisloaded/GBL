const Web3 = require('web3');
let provider = new Web3.providers.HttpProvider("http://localhost:8545");
const web3 = new Web3(provider);
var eth = web3.eth;
var ethDaoService = require("../daoService/ethDaoService");
var address;
class ETHController {
  init() {
    eth.personal.newAccount("AdminAccount").then(function (data) {
      address = data;
      ethDaoService.addAdminChainDetails(address);
    });

  }

  addAccount(accountId) {
    return eth.personal.newAccount(accountId);
  }

  getAccountDetails(accountId) {
    return eth.accounts.privateKeyToAccount(accountId);
}
  getAccountBalance(accountId, callback) {
     eth.getBalance(accountId).then(console.log);
  }

}

module.exports = new ETHController();

